<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="account_multi_payment_invoice" model="ir.ui.view">
		<field name="name">Multiple Invoice Payment</field>
		<field name="model">account.multi.payments</field>
		<field name="arch" type="xml">
			<form string="Multiple Invoice Payment">
				<p class="oe_grey">
				</p>
				<group>	
					<group>
						<field name="payment_type" />
						<field name="partner_type" />
						<field name="journal_id" />
					</group>
					<group>
						<field name="payment_date" />
						<field name="memo"/>
						<field name="final_amount"/>
						<field name="hide_payment_method" invisible="1"/>
                        <field name="payment_method_id" widget="radio" attrs="{'invisible': [('hide_payment_method', '=', True)]}"/>
                        <field name="payment_method_code" invisible="1"/>
						<!-- <field name="final_recive_amount"/> -->
					</group>
				</group>
					<group>
						<field name="payment_invoice_ids" nolabel="1">
							<tree editable="bottom" create="false" delete="false">
								<field name="invoice_id"/>
								<field name="partner_id"/>
								<field name="total_amount" sum="Total Invoice Amount"/>
								<field name="amount_to_pay" sum="Total Receive Amount" />
								<field name="payment_diff" sum="Total Remaining Amount"/>
							</tree>
						</field>
					</group>
<!-- 					<group>
						<field name="invoice_ids" invisible="0"/>
					</group>

 -->				<footer>
					<button name="register_multi_payment" 
						string="Validate" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-default" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_multi_invoice_payment" model="ir.actions.act_window">
		<field name="name">Register Multiple Payment</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">account.multi.payments</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="context">{'payment_invoice_ids': [(4, active_id, None)]}</field>
		<field name="target">new</field>
	</record>
</odoo>
