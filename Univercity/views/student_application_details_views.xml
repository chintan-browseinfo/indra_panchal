<?xml version="1.0" encoding="utf-8"?>
<odoo>  
	<record id="view_student_application_tree" model="ir.ui.view">
		<field name="name">studentapplication.module.tree</field>
		<field name="model">studentapplication.module</field>
		<field name="priority">2</field>
		<field name="arch" type="xml">
			<tree string="Student Application" >
				<field name="name" String="Student Name"/>
				<field name="contact" String="Contact Number"/>
				<field name="email" String="Email Address"/>
				<field name="gender" String="Gender"/>                
				<field name="birthday" String="Birthday"/>
				
				<field name="Age" invisible='1' String="Student Age"/>
				<field name="address" invisible='1' String="Home Town"/>

				
				<field name="education_id" String="Education Stream" invisible="1"/>
				<field name="student_app_ids" String="Student Document" widget="one2many_checkboxes" invisible='1'/>
				
				<field name="course_name" String="Course Name"/>
				<field name="course_time" invisible='1' String="Course Time"/>
				<field name="course_id" String="Course" invisible="1"/>
				
				<field name="student_club_ids" String="Student Club" />
				<field name="total_fees" String="Club Fees"/>
			</tree>
		</field>
	</record>
	<record id="view_student_application_form" model="ir.ui.view">
			<field name="name">studentapplication.module.form</field>
			<field name="model">studentapplication.module</field>
			<field name="arch" type="xml">
				<form string="Student Applications" class="o_sale_order">
				<sheet>
					<group>    
						<group>
							<field name="name" String="Student Name"/>
							<field name="birthday" String="Birthday"/>
							<field name="gender" String="Gender" /> 
						</group>
						<group>
							<field name="address" String="Home Town"/>
							<field name="contact" String="Contact Number"/>
							<field name="email" String="Email Address"/>
							<field name="Age" invisible='0' String="Student Age"/>
						</group>
					</group>
					<group>
						<group>
							<field name="education_id" String="education Stream" />
							<field name="student_club_ids" String="Club" widget="many2many_tags" options="{'no_create_edit': True}" />
							<field name="total_fees" />
						</group>
						<group>
							<field name="course_id" String="Course"/>
							<field name="course_name" String="Course Name"/>
						</group>
					</group>
					<group>
						<field name="student_app_ids" String="Student Document" widget="many2many_checkboxes" invisible='0'/>
					</group>
					<!-- <group name = "custom_lines" string="Custom Lines"> 
							<field name = "student_document" nolabel = "1"> 
									<tree editable = "bottom"> 
											<field name = "name" /> 
											<field name="student_id" invisible='0'/>
									</tree> 
							</field> 
					</group> -->
				</sheet>
				</form>
			</field>
	</record>
 	<record id="student_application_action" model="ir.actions.act_window">
			<field name="name">Student Application</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">studentapplication.module</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,kanban,form</field>
			<field name="help" type="html">
					<p class="oe_view_nocontent_create">
					</p><p>
					</p>
			</field>
	</record>

	<menuitem name="Univercity"
			id="menu_univercity_root"
			sequence="25"/>

	<menuitem id="menu_student_application_config" name="Univercity"
			parent="menu_univercity_root" sequence="1" />
			

	<menuitem action="student_application_action"
					id="menu_sample_module_2" parent="Univercity.menu_student_application_config"
					name="Student Application"
					sequence="12" />
</odoo>