<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_library_tree" model="ir.ui.view">
	<field name="name">library.module.tree</field>
	<field name="model">library.module</field>
	<field name="priority" eval="2"></field>
	<field name="arch" type="xml">
		<tree string="Library Management">
			<field name="name" String="Book Name" />
			<field name="book_author" String="Book Author" />
			<field name="book_publication" String="Book Publication" />
			<field name="book_price" String="Book Price" />
			<field name="book_availability" String="Book Availability" />
			<field name="book_quantity" String="Book Quantity" />
			<!-- <field name="edu_library_book_ids" invisible='1' String="" /> -->
			<!-- <field name="library_book_ids" invisible='1' String="" /> -->
		</tree>
	</field>
	</record>
	<record id="view_library_form" model="ir.ui.view">
		<field name="name">library.module.form</field>
		<field name="model">library.module</field>
		<field name="arch" type="xml">
			<form string="Library Management" class="o_sale_order">
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" String="Book Name" />
						</h1>
					</div>                    
					<group>
						<group>
							<field name="name" String="Book Name" />
							<field name="book_author" String="Book Author" />
						</group>
						<group>
							<field name="book_publication" String="Book Publication" />
							<field name="book_price" String="Book Price" />
						</group>
					</group>
					<group>	
						<group>
							<field name="book_availability" String="Book Availability" />	
						</group>
						<group>
							<field name="edu_library_book_ids" widget="many2many_tags" options="{'no_create_edit': True}" String="Available for Stream" />
						</group>
					</group>
					<group>
						<group>
							<field name="book_quantity"  
							attrs="{'invisible':[('book_availability','=',False)]}"  
							String="Book Quantity" />
						</group>
						<group>
							<field name="library_book_ids" widget="many2many_tags" options="{'no_create_edit': True}" String="Available for Course"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="library_action" model="ir.actions.act_window">
		<field name="name">Library Management</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">library.module</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,kanban,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
			</p>
		</field>
	</record>
	<menuitem action="library_action"
			id="menu_sample_module_7" parent="Univercity.menu_univercity_extra_application_config"
			name="Library Management"
			sequence="9"/>
</odoo>
