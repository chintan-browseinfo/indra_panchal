<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_student_application_tree" model="ir.ui.view">
		<field name="name">studentapplication.module.tree</field>
		<field name="model">studentapplication.module</field>
		<field name="priority">2</field>
		<field name="arch" type="xml">
			<tree string="Student Application" >
				<field name="student_id" String="Student Name"/>
				<field name="contact" String="Contact Number"/>
				<field name="email" String="Email Address"/>
				<field name="gender" String="Gender"/>                
				<field name="birthday" String="Birthday"/>				
				<field name="course_name" String="Course Name"/>
				<field name="total_fees" String="Club Fees"/>
				<field name="aadharnumber" String="Addhar Number" />
				<field name="enroll_id" String="Enrollment Number"/>
				<field name="password" String="Password"/>
			</tree>
		</field>
	</record>
	<record id="view_student_application_form" model="ir.ui.view">
		<field name="name">studentapplication.module.form</field>
		<field name="model">studentapplication.module</field>
		<field name="arch" type="xml">
		<form string="Student Applications" class="o_sale_order">
		<header>
			<button string="Confirm Details" type="object" state="confirm" name="confirm_progressbar" 
				attrs="{'invisible':[('state','!=','confirm')]}"/>
		<!-- <button string="Send Email" type="object" state="email" name="btn_send_email"
				class="oe_button oe_tree_button oe_highlight"
					confirm="Are you sure you want to Send email to students?" />  -->
			<button string="Generate Login" type="object" state="login" name="enroll_progressbar" 
				class="oe_highlight" attrs="{'invisible':['|',('state','!=','login'),('state','=','confirm')]}"/>
			<button string="Generate password" type="object" state="password" name="password_progressbar" class="oe_highlight" attrs="{'invisible':['|',('state','!=','password'),('state','=','confirm')]}"/>
			<button string="Done" type="object" state="done" name="done_progressbar" />
			<field name="state" widget="statusbar"/>
		</header>
		<sheet>
			<div class="oe_title">
				<h1>
					<field name="name" readonly="1"/>
				</h1>
			</div>
			<group>    
				<group>
					<field name="student_id" String="Student Name"/>
					<field name="birthday" String="Birthday"/>
					<field name="gender" String="Gender" />
					<field name="qualification_id" String="Qualification" /> 
				</group>
				<group>
					<field name="address" String="Home Town"/>
					<field name="contact" String="Contact Number"/>
					<field name="email" String="Email Address"/>
					<field name="Age" invisible="0" String="Student Age"/>
				</group>
			</group>
			<notebook>
				<page String="Educational Information">
					<group>
						<group>
							<field name="education_id" String="education Stream" />
							<field name="student_club_ids" String="Club" widget="many2many_tags" options="{'no_create_edit': True}" />
							<field name="total_fees" String="Club Fees" />
						</group>
						<group>
							<field name="course_id" String="Course" />
							<field name="course_name" String="Course Name"
								attrs="{'invisible':[('course_id','=',False)]}"/>
							<field name="course_time" String="Course Time" 
								attrs="{'invisible':[('course_id','=',False)]}" />
						</group>
						<group>							
							<field name="aadharid" String="Aadhar Card"/>
						</group>
						<group>
							<field name="aadharnumber" String="Addhar Number" 
								attrs="{'invisible':[('aadharid','=',False)]}"/>		
						</group>
					</group>
				</page>
				<page String="Login Information" >
					<group>
						<field name="enroll_id" String="Enrollment Number" />
						<field name="password" String="Password" />
					</group>
				</page>
			</notebook>
		</sheet>
		</form>
		</field>
	</record>
	<record id="student_application_action" model="ir.actions.act_window">
			<field name="name">Student Application</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">studentapplication.module</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,kanban,form</field>
			<field name="help" type="html">
					<p class="oe_view_nocontent_create">
					</p><p>
					</p>
			</field>
	</record>

	<menuitem action="student_application_action"
					id="menu_sample_module_2" parent="Univercity.menu_student_application_config"
					name="Student Application"
					sequence="6" />

</odoo>